                        message: 'Please supply your description'
                    }
                }
            },

            "project[document]" :{
                validators: {
                    notEmpty: {
                        message: 'Please select your video'
                    }
                }
            },

            "category_id" :{
                validators: {
                    notEmpty: {
                        message: 'Please supply your select categories'
                    },

                }
            },
               "project[status]" : {
                validators: {
                    notEmpty: {
                        message: 'Please supply your select status'
                    },

                }
            },
          
               "project[active]" : {
                validators: {
                    notEmpty: {
                        message: 'Please supply your select active'
