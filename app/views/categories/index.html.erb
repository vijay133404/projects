<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.desc %></td>
        <td><%= link_to 'Show', category ,:class=>"btn btn-success"%></td>
        <td><%= link_to 'Edit', edit_category_path(category) ,:class=>"btn btn-success"%></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

