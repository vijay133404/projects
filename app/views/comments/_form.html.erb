
<%= form_for([@project, @project.comments.build],:remote=>true)  do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
  <%= f.label :image %>
  <%= f.file_field :image %>   
  </p>
  <p>
    <%= f.submit %>
</p>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<% end %>
