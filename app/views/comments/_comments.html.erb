
<%@project.comments.each do |comment|%>  
<p>
  <strong>Commenter:</strong>
  <%= comment.commenter %>
</p>
 
<p>
  <strong>Comment:</strong>
  <%= comment.body %>
</p>
<p>
<strong>image:</strong>
 <%=image_tag comment.image,:height=>"150", :width=>"150" %>    
</p>
<p>
  <%= link_to 'Destroy Comment', [comment.project, comment],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
</p>
<p>
<%= link_to 'Edit Comment',edit_project_comment_path(id: comment.id,project_id: @project.id) %> </p>

<h2> reply a comment</h2>
<% @replies = Reply.where(:comment_id=> comment.id)%>

<div class= "replies-container_<%= comment.id %>">
  <%= render 'replies/replies' %>
</div>

  <%= render 'replies/form', :comment=>comment %> 
<%end%>
